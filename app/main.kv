#:kivy 2.0.0
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import BackgroundColorBehavior kivymd.uix.behaviors.backgroundcolor_behavior

<RootScreen>
    transition: NoTransition()
    StartScreen:
    GameScreen:

<StartScreen>
    name: "start"
    # background: 'resources/img/bg.png'
    md_bg_color: 1, 0, 0, 1
    # canvas.before:
    #     Rectangle:
    #         pos:self.pos
    #         size:self.size
    #         source: 'resources/img/bg.png'

    BoxLayout:
        MDFillRoundFlatButton:
            text: "Start"
            md_bg_color: 0, 0, 1, 1
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0.1
                root.manager.current = "game"
            size: self.width, 50
            size_hint: 1, None
            pos_hint: {'bottom':1}                 

<GameScreen>
    name:"game"
    md_bg_color: 0, 1, 0, 1
    # background: 'resources/img/bg.png'
    # canvas.before:
    #     Rectangle:
    #         pos:self.pos
    #         size:self.size
    #         source: 'resources/img/bg.png'

    BoxLayout:
        MDFillRoundFlatButton:
            text: "Back"
            md_bg_color: 1, 0, 1, 1
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0.1
                root.manager.current = "start"
            size: self.width, 50
            size_hint: 1, None
            pos_hint: {'bottom':1}